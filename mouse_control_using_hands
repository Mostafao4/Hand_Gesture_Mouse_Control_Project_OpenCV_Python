import cv2
import pyautogui
import sys
import os

# Add the path to the local mediapipe source directory
mediapipe_path = os.path.abspath("mediapipe.txt")
if mediapipe_path not in sys.path:
    sys.path.insert(0, mediapipe_path)


camera = cv2.VideoCapture(0)
while True:
    ret, image= camera.read()
    cv2.imshow("Hand movement video capture",image)
    key= cv2.waitKey(100)
    
    if key ==27: 
       break
   
camera.release() 
cv2.destroyAllWindows() 